{% extends "../layout/default.njk" %}

{% block container %}
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">
            用户列表
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>用户名</th>
                        <th>邮箱</th>
                        <th>密码（加密）</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in userList %}
                        <tr>
                            <td><a href="/admin/users/{{ user.id }}">{{ user.id }}</a></td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.password }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel-body -->
    </div>
{% endblock %}