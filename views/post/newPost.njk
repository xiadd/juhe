{% extends "../layout/default.njk" %}

{% block container %}
    <br>
    <form id="post" method="post" action="/admin/posts/new">
        <div class="form-group input-group">
            <span class="input-group-addon">标题</span>
            <input type="text" name="title" class="form-control" placeholder="文章标题">
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">标签</span>
            <input type="text" name="tag" class="form-control" placeholder="文章标签">
        </div>
        <textarea name="content" id="cm-textarea" cols="30" rows="10" class="hidden"></textarea>
        <br>
        <button type="submit" class="btn btn-primary">发表文章</button>
    </form>
{% endblock %}

{% block styles %}
    {{ super() }}
    <link href="//cdn.bootcss.com/codemirror/5.28.0/codemirror.min.css" rel="stylesheet">
{% endblock %}

{% block scripts %}
    {{ super() }}
    <script src="//cdn.bootcss.com/codemirror/5.28.0/codemirror.min.js"></script>
    <script src="//cdn.bootcss.com/codemirror/5.28.0/mode/markdown/markdown.min.js"></script>
    {{ loadScript('editor.js') | safe}}
    <script>

    </script>
{% endblock %}
